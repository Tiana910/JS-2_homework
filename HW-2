'use strict'

class GoodsItem {   // создаем клас товаров
    constructor(title, price) {
        this.title = title;
        this.price = price;
    }
    render() {      // метод возвращает разметку 
        return `<div class="goods-item">
    <img src="img/goods2.jpg"<br>
    <h3>${this.title}</h3>
    <p>${this.price}</p>
    <button class="cart-button">Купить</button>
    </div>`;
    }
}

class GoodsList {   // список товаров 
    constructor() {
        this.goods = [];
    }
    fetсhGoods() {   //метод заполнения списка
        this.goods = [
            { title: 'Notebook', price: 2000 },
            { title: 'Mouse', price: 20 },
            { title: 'Keyboard', price: 200 },
            { title: 'Gamepad', price: 50 },
        ];
    }
    render() {  // метод вывода списка товара каждого элемента массива и создать экземпляр класса GoodsItem и запрашивать его в разметку
        let listHtml = '';
        this.goods.forEach(good => {
            const goodItem = new GoodsItem(good.title, good.price);
            listHtml += goodItem.render();
        });
        document.querySelector('.goods-list').innerHTML = listHtml;
    }
    getSum() {   // вывести сумму товаров
        for (let good of this.goods) {
            sum += item.price;
            alert(Sum);
        }

    };
}

const list = new GoodsList();  // чтобы вывести список нужно создать экземпляр
//класса GoodsList и вызвать для него метод fetchGoods чтобы записать список товара в свойство goods и вызвать метод render
list.fetchGoods();
list.render();




